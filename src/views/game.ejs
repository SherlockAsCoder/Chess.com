<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <meta name="color-scheme" content="light" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header class="game-header">
      <img src="/image/logo.png" alt="Chess Logo" class="logo" />
      <div class="share-container">
        <input type="text" id="shareLinkInput" readonly />
        <button id="copyLinkBtn">Game Link</button>
      </div>
    </header>

    <div class="game-layout">
      <div class="board-container">
        <div id="chessBoard"></div>
      </div>

      <div class="info-panel">
        <div id="player-bottom-info" class="player-info"></div>
        <div class="meta-info">
          <span id="role-indicator"></span>
          <span id="viewer-count"></span>
        </div>
        <div id="player-top-info" class="player-info"></div>
      </div>
    </div>

    <div id="promotion-modal" class="modal-overlay" style="display: none">
      <div class="modal-content">
        <h3>Promote Pawn to</h3>
        <div class="promotion-choices">
          <button data-piece="q">♛</button>
          <button data-piece="r">♜</button>
          <button data-piece="b">♝</button>
          <button data-piece="n">♞</button>
        </div>
      </div>
    </div>

    <div id="game-over-modal" class="modal-overlay" style="display: none">
      <div class="modal-content">
        <h2 id="game-over-title">Game Over</h2>
        <p id="game-over-result"></p>
        <button id="go-home-btn" class="btn">Return to Home</button>
      </div>
    </div>

    <script>
      const gameId = "<%= gameId %>";
    </script>
    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/0.10.3/chess.min.js"></script>
    <script src="/js/game.js"></script>
  </body>
</html>
